<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalmCafeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <!-- 여기에 패딩을 추가하여 아이콘과 텍스트 사이 간격을 조정 -->
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item> <!-- 텍스트 크기 -->
        <item name="android:paddingTop">8dp</item> <!-- 텍스트 위에 패딩 추가 -->
        <item name="android:paddingBottom">8dp</item> <!-- 텍스트 아래에 패딩 추가 -->
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@drawable/round_greenbackground</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.CalmCafeApp" parent="Base.Theme.CalmCafeApp" />
</resources>
