<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cafe_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cafe_img1"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="스타벅스 연남점"
            android:textSize="15sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/cafe_image"
            app:layout_constraintTop_toTopOf="@id/cafe_image"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/store_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 혼잡도: 보통"
            android:textSize="14sp"
            android:textColor="@color/darkgray"
            app:layout_constraintStart_toStartOf="@id/cafe_name"
            app:layout_constraintTop_toBottomOf="@id/cafe_name"
            android:drawableStart="@drawable/people"
            android:layout_marginTop="6dp"
            android:drawableTint="@color/green"
            android:drawablePadding="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/favorite_btn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"
            android:drawableStart="@drawable/heart_filled"
            android:layout_marginEnd="20dp"
            android:contentDescription="좋아요 아이콘" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
