<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Promotion Number -->
    <TextView
        android:id="@+id/tvPromotionNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_rank"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginEnd="8dp" />

    <!-- Promotion Details -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvPromotionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take-out 할인율:"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="10%"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tvPromotionType"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAvailableTimetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용가능시간:"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPromotionType" />

        <TextView
            android:id="@+id/tvAvailableTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="12:00-14:00"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tvPromotionType"
            app:layout_constraintTop_toBottomOf="@+id/tvPromotionType" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Edit Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditPromotion"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="수정"
        android:background="@drawable/round_modify"
        android:textSize="12sp"
        android:textColor="#2E8465"
        android:layout_gravity="center" />
</LinearLayout>
