<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_marginStart="8dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cafeImageCard"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cafe_image"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_cafe_img" />
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/cafe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YM ESPRESSO ROOM"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/cafe_location_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/location"
                app:tint="@color/green"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cafe_name"
               />

            <TextView
                android:id="@+id/cafe_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기 고양시 덕양구"
                android:textSize="12sp"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toEndOf="@id/cafe_location_icon"
                app:layout_constraintTop_toBottomOf="@id/cafe_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"/>

            <ImageView
                android:id="@+id/cafe_outlet_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/people"
                app:tint="@color/green"
                app:layout_constraintTop_toBottomOf="@id/cafe_location_icon"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/cafe_Congestion"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="실시간 혼잡도"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/cafe_address"
                app:layout_constraintStart_toEndOf="@id/cafe_location_icon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>
