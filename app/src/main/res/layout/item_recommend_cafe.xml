<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cafeImageCard"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cafe_image"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_cafe_img" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스타벅스"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cafe_location_icon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:src="@drawable/location_green" />

        <TextView
            android:id="@+id/cafe_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="address"
            android:textColor="@color/lightgray"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cafe_outlet_icon"
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:src="@drawable/people"
            app:tint="@color/green"/>

        <TextView
            android:id="@+id/cafe_Congestion"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:text="현재 혼잡도: 실시간 혼잡도"
            android:textColor="@color/lightgray"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
