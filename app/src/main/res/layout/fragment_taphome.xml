<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TapHomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cafe_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 영업중 정보 -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_txt3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/menu_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:text="카페 메뉴"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/promotion_txt2"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <TextView
                android:id="@+id/promotion_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:text="카페 현황"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coupon_list" />

            <TextView
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:id="@+id/promotion_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="프로모션"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coupon_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constraintLayout"
                android:layout_width="157dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/promotion_txt2">

                <!-- CircularProgressView for 사장님의 혼잡도 -->
                <com.example.calmcafeapp.ui.CircularProgressView
                    android:id="@+id/owner_circularProgressViewBoss"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/owner_congestion" />

                <!-- 사장님의 혼잡도 텍스트 -->
                <TextView
                    android:id="@+id/owner_congestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="실시간 좌석 이용률"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 정보 아이콘 -->
                <ImageView
                    android:id="@+id/info_owner_congestion"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:contentDescription="AI를 통해 실제 매장 상황을 분석한 실시간 좌석 이용률입니다."
                    android:src="@drawable/ic_info"
                    app:layout_constraintBottom_toBottomOf="@+id/owner_congestion"
                    app:layout_constraintStart_toEndOf="@+id/owner_congestion"
                    app:layout_constraintTop_toTopOf="@+id/owner_congestion" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />


            <!-- 방문자의 혼잡도 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="157dp"
                android:layout_height="150dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/promotion_txt2">

                <!-- CircularProgressView for 방문자의 혼잡도 -->
                <com.example.calmcafeapp.ui.CircularProgressView
                    android:id="@+id/visitor_circularProgressViewVisitor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/visitor_congestion" />

                <TextView
                    android:id="@+id/visitor_congestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="손님 체감 혼잡도"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 정보 아이콘 -->
                <ImageView
                    android:id="@+id/info_visitor_congestion"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:contentDescription="실제 방문한 손님들이 직접 입력한 매장 혼잡도입니다."
                    android:src="@drawable/ic_info"
                    app:layout_constraintBottom_toBottomOf="@id/visitor_congestion"
                    app:layout_constraintStart_toEndOf="@id/visitor_congestion"
                    app:layout_constraintTop_toTopOf="@id/visitor_congestion" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
