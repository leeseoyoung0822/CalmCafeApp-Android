<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cafePhoto_Imv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/cafe_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cafePhoto_Imv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        android:text="한산한 가 카페"/>

    <TextView
        android:id="@+id/congestion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cafe_nameTv"
        app:layout_constraintTop_toBottomOf="@id/cafe_nameTv"
        android:drawableStart="@drawable/people"
        android:drawablePadding="8dp"
        android:drawableTint="@color/green"
        android:text="현재혼잡도 : "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cafe_stateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보통"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/congestion_txt"
        app:layout_constraintTop_toTopOf="@id/congestion_txt"/>

    <ImageButton
        android:id="@+id/likes_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/heart_empty"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="좋아요 버튼"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitegray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cafePhoto_Imv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>