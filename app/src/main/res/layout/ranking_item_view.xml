<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cafeImageCard"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/cafePhoto_Imv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/rankingBadge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ranking_badge"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/cafePhoto_Imv"
        app:layout_constraintStart_toStartOf="@id/cafePhoto_Imv"
        android:padding="4dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/cafe_nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cafeImageCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/likes_btn"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:textSize="17dp"
        android:text="한산한 가 카페"
         />

    <TextView
        android:id="@+id/congestion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cafe_nameTv"
        app:layout_constraintTop_toBottomOf="@id/cafe_nameTv"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/people"
        android:drawablePadding="8dp"
        android:drawableTint="@color/green"
        android:text="현재혼잡도 : "
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <TextView
        android:id="@+id/cafe_stateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보통"

        app:layout_constraintStart_toEndOf="@id/congestion_txt"
        app:layout_constraintTop_toTopOf="@id/congestion_txt"/>

    <ImageButton
        android:id="@+id/likes_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/heart_empty"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="좋아요 버튼"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/morewhitegray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cafeImageCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>