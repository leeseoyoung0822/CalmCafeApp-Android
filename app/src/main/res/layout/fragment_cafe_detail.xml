<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CafeDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/cafe_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 가게 이름 -->
        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한산한가 연남점"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cafe_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <!-- 출발하기 버튼 -->
        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발하기"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cafe_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/beige" />

        <!-- 좋아요 및 좋아요 수 -->
        <ImageView
            android:id="@+id/likes_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart_empty"
            app:layout_constraintTop_toBottomOf="@id/cafe_name"
            app:layout_constraintStart_toStartOf="@id/cafe_name"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/likes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000개"
            app:layout_constraintStart_toEndOf="@id/likes_btn"
            app:layout_constraintTop_toTopOf="@id/likes_btn"
            android:layout_marginStart="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/likes_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cafe_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 영업중 정보 -->
        <TextView
            android:id="@+id/open_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업중 "
            android:drawableStart="@drawable/clock"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:00 라스트 오더"
            app:layout_constraintStart_toEndOf="@id/open_state"
            app:layout_constraintTop_toTopOf="@id/open_state"
            android:layout_marginStart="8dp" />

        <!-- 거리 정보 -->
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 위치에서 200m"
            android:drawableStart="@drawable/location"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/open_state"
            app:layout_constraintStart_toStartOf="@id/open_state"
            />

        <View
            android:id="@+id/open_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/promotion_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로모션"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/open_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coupon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="@id/promotion_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promotion_txt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightgray"
            app:layout_constraintTop_toBottomOf="@id/coupon_list"
            android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 탭내용 아직 안넣어서 오류 떠서 주석처리
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cafe_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/


    </com.google.android.material.tabs.TabLayout>-->






</androidx.constraintlayout.widget.ConstraintLayout>